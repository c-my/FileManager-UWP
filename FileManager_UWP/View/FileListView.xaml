            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Width="Auto"
            Text="{Binding Path}"
            />
        <ListView
            Name="MicroShitList"
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            CanDragItems="False" 
            CanReorderItems="True" 
            AllowDrop="False"
            SelectionMode="Single"
            SelectedItem="{Binding ListSelectedItem, Mode=TwoWay}"
            IsDoubleTapEnabled="True"
            IsTapEnabled="True"
            >
